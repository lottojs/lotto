{
    "extends": "./node_modules/@lottojs/ts-config/base.json",
    "compilerOptions": {
        "lib": [
            "es2021"
        ],
        "outDir": "./lib",
        "baseUrl": ".",
        "noImplicitReturns": false,
        "paths": {
            "@core/*": [
                "./src/core/*"
            ]
        }
    },
    "include": [
        "src/**/*"
    ],
    "ts-node": {
        "require": [
            "tsconfig-paths/register"
        ]
    }
}